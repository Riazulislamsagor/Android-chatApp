<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="5dp"
    android:layout_marginEnd="7dp"
    android:maxHeight="400dp"
    android:maxWidth="310dp"
    android:minHeight="30dp"
    android:background="@color/white">
    <TextView
        android:padding="4dp"
        android:id="@+id/recivertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/recivertimeId"
        app:layout_constraintStart_toStartOf="@id/recivergideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_margin="8dp"
        android:inputType="textLongMessage|textMultiLine"
        android:maxWidth="270dp"
        android:minWidth="70dp"
        android:text="textview"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/recivertimeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:text="12:00pm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/recivergideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="184dp" />
</androidx.constraintlayout.widget.ConstraintLayout>